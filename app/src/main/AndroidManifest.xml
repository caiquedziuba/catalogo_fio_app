<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.app.fiocatalogo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CursosActivity"
            android:label="@string/activity_cursos"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".MainActivity"
            />
        <activity
            android:name=".FaculdadeActivity"
            android:label="@string/title_activity_faculdade"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".MainActivity"
            />
        <activity
            android:name=".CursoDetalhesActivity"
            android:label="@string/title_activity_curso_detalhes"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".MainActivity"
            />
        <activity
            android:name=".ProfessoresActivity"
            android:label="@string/title_activity_professores"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".MainActivity"
            />
    </application>

</manifest>